<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_order_receipt_header"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:src="@drawable/receipt_success"/>

        <ListView
            android:id="@+id/order_summary_list_view"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
            android:id="@+id/order_id_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:orientation="horizontal"
            android:padding="20dp">
            <TextView
                android:id="@+id/text_view_order_id_description"
                android:layout_width="wrap_content"
                android:layout_weight="0.0"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:text="Order Id"
                android:textColor="#515151"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/text_view_order_id"
                android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:textColor="#515151"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_retry_print"
            android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:background="#ffe34b"
            android:onClick="onButtonRetryPrintClicked"
            android:text="Retry"
            android:textColor="#515151"/>

    </LinearLayout>

</FrameLayout>